{
  "name": "vs-poor-gpt",
  "displayName": "vs-poor-gpt",
  "description": "Call ChatGPT from VsCode without API",
  "repository": "https://github.com/eggcaker/vs-poor-gpt",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onCommand:vs-poor-gpt.runPoorGPT"],
  "main": "./dist/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "vs-poor-gpt.runPoorGPT",
        "key": "ctrl+;",
        "mac": "cmd+;"
      }
    ],
    "commands": [
      {
        "command": "vs-poor-gpt.runPoorGPT",
        "title": "Run Poor GPT"
      }
    ],
    "configuration": {
      "title": "Poor GPT",
      "properties": {
        "vs-poor-gpt.gptPath": {
          "type": "string",
          "default": "gpt.bat",
          "description": "Path to the gpt command."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "ts-loader": "^9.4.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "@vscode/test-electron": "^2.3.0"
  }
}
